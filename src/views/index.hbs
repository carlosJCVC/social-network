<div class="card">
    <div class="card-header bg-dark">
        <h3 class="card-title  text-white">
            <i class="fa fa-image"></i> Upload and image
        </h3>
    </div>
    <div class="card-body">
        <form action="/storageImage" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" name="image" class="custom-file-input" id="inputGroup" aria-describedby="inputGroupFileAddon" required>
                        <label class="custom-file-label" for="inputGroupFile">Choose your file</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="Title for the image">
            </div>
            <div class="form-group">
                <textarea name="description" class="form-control" rows="2" placeholder="Description for the image" required></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">
                    <i class="fa fa-upload"></i> Upload Image
                </button>
            </div>
        </form>
    </div>
</div>